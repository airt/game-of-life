name:                game-of-life
version:             0.0.1
description:         Conway's Game of Life
homepage:            https://github.com/airt/game-of-life
license:             BSD3
license-file:        license
author:              airt
maintainer:          airtial@gmail.com
copyright:           2017 airt
category:            Game
build-type:          Simple
extra-source-files:  readme.md
cabal-version:       >= 1.10

library
  hs-source-dirs:      src
  exposed-modules:     Lib
  build-depends:       base >= 4.7 && < 5
  default-language:    Haskell2010

executable game-of-life-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base, game-of-life
  default-language:    Haskell2010

test-suite game-of-life-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base, game-of-life
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/airt/game-of-life
